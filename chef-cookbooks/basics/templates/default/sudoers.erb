Defaults !lecture,tty_tickets,!fqdn
Defaults env_keep += "HOME"

root   ALL=(ALL) ALL

%sudo  ALL=(ALL) ALL
%<%= node[:admin_group] %> ALL=(ALL) NOPASSWD:ALL

<% node[:sudo][:groups].each do |group, run_as| %>
%<%= group %> ALL=(<%= run_as %>) NOPASSWD:ALL
<% end %>

